@{
  Layout = "_Layout";
}
@using Sillystringz.Models;
<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">
      @Model.Name
    </h1>
    <button class="btn btn-danger" onclick="window.location.href='/machines';">Machines</button>
    <button class="btn btn-danger" onclick="window.location.href='/machines/edit/@Model.MachineId';">Edit</button>
    <button class="btn btn-danger" onclick="window.location.href='/machines/delete/@Model.MachineId';">Delete</button>



  </div>
  <div class="row">
    <div class="col-6">
      <div class="card card-body">
        @if(Model.EngineerMachines.Count == 0)
        {
          <p>@Model.Name has no Engineers linked.</p>
        }
        <ul>
          @foreach (EngineerMachine em in @Model.EngineerMachines)
          {
              <li>@em.Engineer.Name | @Html.ActionLink("details","details","engineers", new {id = em.EngineerId})</li>
          }
        </ul>
        <div>
          <button class="btn btn-danger" onclick="window.location.href='/machines/addEngineer/@Model.MachineId';">Link an Engineer</button>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="card card-body">
        <h5>Name: @Model.Name</h5>
        <h5>Description: @Model.Description</h5>
      </div>
    </div>
  </div>
  
   @Html.Partial("Header")
  @Html.Partial("Footer") 

</div>