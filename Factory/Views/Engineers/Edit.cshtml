@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">
      Edit @Model.Name
    </h1>

  </div>
  <div class="card card-body">

    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.EngineerId)

      @Html.LabelFor(model => model.Name)
      @Html.EditorFor(model => model.Name, new { @required = "required"})
      @Html.LabelFor(model => model.Description)
      @Html.EditorFor(model => model.Description)

      
      <input type="submit" value="Edit Engineer" class="btn btn-outline-dark" />
      <button class="btn btn-outline-dark" type="button" onclick="window.location.href='/engineers/details/@Model.EngineerId';">Cancel</button>
    }
  </div>
</div>
  @Html.Partial("Header")
  @Html.Partial("Footer")
